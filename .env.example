# ==========================================
# CALISTHENIC COMMANDO - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to git!
# ==========================================

# ==================== SUPABASE ====================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (only use server-side, NEVER expose to client)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==================== PAYSTACK (Phase 5) ====================
# Get these from: https://dashboard.paystack.com/#/settings/developer
# EXPO_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
# PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# ==================== APP CONFIG ====================
# Set to 'development', 'staging', or 'production'
EXPO_PUBLIC_APP_ENV=development

# Enable/disable debug logging
EXPO_PUBLIC_DEBUG=true

